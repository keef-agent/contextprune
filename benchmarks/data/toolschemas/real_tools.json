          "start_time": {"type": "string"},
          "end_time": {"type": "string"},
          "description": {"type": "string"},
          "location": {"type": "string"},
          "attendees": {"type": "array", "items": {"type": "string"}},
          "send_updates": {"type": "string", "enum": ["all", "externalOnly", "none"], "default": "all"}
