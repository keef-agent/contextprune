{
  "github": [
    {
      "name": "search_repositories",
      "description": "Search GitHub repositories by keywords, language, stars, and other criteria. Returns a list of matching repositories with metadata.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query using GitHub search syntax (e.g., 'language:python stars:>1000')"
          },
          "sort": {
            "type": "string",
            "enum": ["stars", "forks", "updated", "best-match"],
            "default": "best-match",
            "description": "Sort field for results"
          },
          "order": {
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "desc"
          },
          "per_page": {
            "type": "integer",
            "default": 10,
            "maximum": 100,
            "description": "Number of results per page"
          },
          "page": {
            "type": "integer",
            "default": 1
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "create_issue",
      "description": "Create a new issue in a GitHub repository. Returns the created issue with its number and URL.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string", "description": "Repository owner (username or org)"},
          "repo": {"type": "string", "description": "Repository name"},
          "title": {"type": "string", "description": "Issue title"},
          "body": {"type": "string", "description": "Issue body in Markdown"},
          "labels": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Labels to assign to the issue"
          },
          "assignees": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Usernames to assign"
          },
          "milestone": {
            "type": "integer",
            "description": "Milestone number"
          }
        },
        "required": ["owner", "repo", "title"]
      }
    },
    {
      "name": "list_pull_requests",
      "description": "List pull requests for a GitHub repository with optional filtering by state, labels, and assignee.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "state": {
            "type": "string",
            "enum": ["open", "closed", "all"],
            "default": "open"
          },
          "head": {"type": "string", "description": "Filter by head user or head org:branch"},
          "base": {"type": "string", "description": "Filter by base branch"},
          "sort": {
            "type": "string",
            "enum": ["created", "updated", "popularity", "long-running"],
            "default": "created"
          },
          "direction": {"type": "string", "enum": ["asc", "desc"], "default": "desc"},
          "per_page": {"type": "integer", "default": 30, "maximum": 100}
        },
        "required": ["owner", "repo"]
      }
    },
    {
      "name": "get_file_contents",
      "description": "Get the contents of a file or directory in a repository. Returns file content as base64-encoded string.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "path": {"type": "string", "description": "Path to file or directory"},
          "ref": {"type": "string", "description": "Branch, tag, or commit SHA. Default: default branch"}
        },
        "required": ["owner", "repo", "path"]
      }
    },
    {
      "name": "fork_repository",
      "description": "Create a fork of a repository. Returns the forked repository.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "organization": {"type": "string", "description": "If omitted, fork is in your personal account"},
          "name": {"type": "string", "description": "New name for the fork"}
        },
        "required": ["owner", "repo"]
      }
    },
    {
      "name": "create_pull_request",
      "description": "Create a pull request. Returns the PR with number, URL, and merge status.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "title": {"type": "string"},
          "body": {"type": "string", "description": "PR description in Markdown"},
          "head": {"type": "string", "description": "Branch to merge from (e.g. feature/my-branch)"},
          "base": {"type": "string", "description": "Branch to merge into (e.g. main)"},
          "draft": {"type": "boolean", "default": false},
          "maintainer_can_modify": {"type": "boolean", "default": true}
        },
        "required": ["owner", "repo", "title", "head", "base"]
      }
    },
    {
      "name": "list_commits",
      "description": "List commits on a repository branch with optional filtering by author, date, and path.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "sha": {"type": "string", "description": "Branch, tag, or commit SHA"},
          "path": {"type": "string", "description": "Only commits affecting this path"},
          "author": {"type": "string", "description": "Filter by author login or email"},
          "since": {"type": "string", "description": "ISO 8601 datetime — commits after this time"},
          "until": {"type": "string", "description": "ISO 8601 datetime — commits before this time"},
          "per_page": {"type": "integer", "default": 30}
        },
        "required": ["owner", "repo"]
      }
    },
    {
      "name": "create_release",
      "description": "Create a new release for a repository tag. Can generate release notes automatically.",
      "parameters": {
        "type": "object",
        "properties": {
          "owner": {"type": "string"},
          "repo": {"type": "string"},
          "tag_name": {"type": "string", "description": "Tag for this release (e.g. v1.2.0)"},
          "name": {"type": "string", "description": "Release title"},
          "body": {"type": "string", "description": "Release notes in Markdown"},
          "draft": {"type": "boolean", "default": false},
          "prerelease": {"type": "boolean", "default": false},
          "generate_release_notes": {"type": "boolean", "default": false}
        },
        "required": ["owner", "repo", "tag_name"]
      }
    }
  ],

  "stripe": [
    {
      "name": "create_payment_intent",
      "description": "Create a PaymentIntent to collect a payment. Returns a client_secret for the frontend to complete payment.",
      "parameters": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "integer",
            "description": "Amount in the smallest currency unit (e.g. cents for USD)"
          },
          "currency": {
            "type": "string",
            "description": "Three-letter ISO currency code (e.g. 'usd', 'eur')"
          },
          "customer": {
            "type": "string",
            "description": "Stripe Customer ID to attach this payment to"
          },
          "description": {"type": "string"},
          "metadata": {
            "type": "object",
            "description": "Key-value pairs for your own use (max 50 keys)"
          },
          "automatic_payment_methods": {
            "type": "object",
            "properties": {"enabled": {"type": "boolean"}},
            "description": "Automatically enable applicable payment methods"
          },
          "confirm": {
            "type": "boolean",
            "default": false,
            "description": "Confirm immediately if true"
          }
        },
        "required": ["amount", "currency"]
      }
    },
    {
      "name": "retrieve_customer",
      "description": "Retrieve a customer object by ID. Returns customer details including email, name, default payment method, and subscription status.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "string",
            "description": "Stripe Customer ID (starts with 'cus_')"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Fields to expand (e.g. ['default_source', 'subscriptions'])"
          }
        },
        "required": ["customer_id"]
      }
    },
    {
      "name": "list_charges",
      "description": "List charges, optionally filtered by customer, date range, or payment intent. Returns paginated charge objects.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer": {"type": "string", "description": "Filter by customer ID"},
          "created": {
            "type": "object",
            "properties": {
              "gte": {"type": "integer", "description": "Unix timestamp — created after"},
              "lte": {"type": "integer", "description": "Unix timestamp — created before"}
            }
          },
          "limit": {"type": "integer", "default": 10, "maximum": 100},
          "starting_after": {"type": "string", "description": "Cursor for pagination"},
          "payment_intent": {"type": "string", "description": "Filter by PaymentIntent ID"}
        },
        "required": []
      }
    },
    {
      "name": "create_customer",
      "description": "Create a new customer in Stripe. Returns the customer object with its ID.",
      "parameters": {
        "type": "object",
        "properties": {
          "email": {"type": "string"},
          "name": {"type": "string"},
          "phone": {"type": "string"},
          "description": {"type": "string"},
          "metadata": {"type": "object"},
          "address": {
            "type": "object",
            "properties": {
              "line1": {"type": "string"},
              "line2": {"type": "string"},
              "city": {"type": "string"},
              "state": {"type": "string"},
              "postal_code": {"type": "string"},
              "country": {"type": "string"}
            }
          },
          "payment_method": {"type": "string", "description": "Default payment method ID"}
        },
        "required": []
      }
    },
    {
      "name": "create_refund",
      "description": "Refund a charge or payment intent, fully or partially.",
      "parameters": {
        "type": "object",
        "properties": {
          "charge": {"type": "string", "description": "Charge ID to refund"},
          "payment_intent": {"type": "string", "description": "PaymentIntent ID to refund"},
          "amount": {"type": "integer", "description": "Amount in cents to refund (omit for full refund)"},
          "reason": {
            "type": "string",
            "enum": ["duplicate", "fraudulent", "requested_by_customer"],
            "description": "Reason for the refund"
          },
          "metadata": {"type": "object"}
        },
        "required": []
      }
    },
    {
      "name": "create_subscription",
      "description": "Create a subscription for a customer to a price/plan. Returns the subscription with current period and status.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer": {"type": "string", "description": "Customer ID"},
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "price": {"type": "string", "description": "Price ID"},
                "quantity": {"type": "integer", "default": 1}
              }
            }
          },
          "trial_period_days": {"type": "integer"},
          "default_payment_method": {"type": "string"},
          "metadata": {"type": "object"},
          "cancel_at_period_end": {"type": "boolean", "default": false}
        },
        "required": ["customer", "items"]
      }
    },
    {
      "name": "retrieve_balance",
      "description": "Retrieve the current balance of the Stripe account, broken down by currency and fund type.",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    {
      "name": "create_invoice",
      "description": "Create an invoice for a customer. Can be sent immediately or manually finalized.",
      "parameters": {
        "type": "object",
        "properties": {
          "customer": {"type": "string"},
          "auto_advance": {"type": "boolean", "default": true},
          "collection_method": {
            "type": "string",
            "enum": ["charge_automatically", "send_invoice"],
            "default": "charge_automatically"
          },
          "description": {"type": "string"},
          "metadata": {"type": "object"},
          "days_until_due": {"type": "integer", "description": "Days until due date for send_invoice method"}
        },
        "required": ["customer"]
      }
    }
  ],

  "slack": [
    {
      "name": "post_message",
      "description": "Post a message to a Slack channel or user. Supports text, blocks (rich formatting), and attachments.",
      "parameters": {
        "type": "object",
        "properties": {
          "channel": {
            "type": "string",
            "description": "Channel ID or name (e.g. '#general' or 'C012345'), or user ID for DMs"
          },
          "text": {
            "type": "string",
            "description": "Message text. Used as fallback for blocks and for notifications."
          },
          "blocks": {
            "type": "array",
            "description": "Block Kit blocks for rich message formatting",
            "items": {"type": "object"}
          },
          "thread_ts": {
            "type": "string",
            "description": "Timestamp of parent message to reply in thread"
          },
          "mrkdwn": {"type": "boolean", "default": true},
          "unfurl_links": {"type": "boolean", "default": true}
        },
        "required": ["channel", "text"]
      }
    },
    {
      "name": "list_channels",
      "description": "List all channels in the workspace. Returns channel IDs, names, topics, and member counts.",
      "parameters": {
        "type": "object",
        "properties": {
          "types": {
            "type": "string",
            "default": "public_channel",
            "description": "Comma-separated list: public_channel, private_channel, mpim, im"
          },
          "exclude_archived": {"type": "boolean", "default": true},
          "limit": {"type": "integer", "default": 100, "maximum": 1000},
          "cursor": {"type": "string", "description": "Pagination cursor from previous response"}
        },
        "required": []
      }
    },
    {
      "name": "get_user_info",
      "description": "Get profile and account information for a Slack user by ID.",
      "parameters": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string",
            "description": "Slack user ID (e.g. 'U012345')"
          },
          "include_locale": {"type": "boolean", "default": false}
        },
        "required": ["user"]
      }
    },
    {
      "name": "upload_file",
      "description": "Upload a file to Slack and optionally share it to channels.",
      "parameters": {
        "type": "object",
        "properties": {
          "channels": {
            "type": "string",
            "description": "Comma-separated channel IDs to share to"
          },
          "content": {"type": "string", "description": "File content (text files only)"},
          "filename": {"type": "string"},
          "filetype": {"type": "string", "description": "Slack file type (e.g. 'python', 'text', 'csv')"},
          "title": {"type": "string"},
          "initial_comment": {"type": "string", "description": "Message to accompany the file"}
        },
        "required": ["filename"]
      }
    },
    {
      "name": "add_reaction",
      "description": "Add an emoji reaction to a message.",
      "parameters": {
        "type": "object",
        "properties": {
          "channel": {"type": "string"},
          "name": {"type": "string", "description": "Emoji name without colons (e.g. 'thumbsup')"},
          "timestamp": {"type": "string", "description": "Message timestamp (ts field)"}
        },
        "required": ["channel", "name", "timestamp"]
      }
    },
    {
      "name": "get_channel_history",
      "description": "Fetch message history for a channel, returning messages in reverse chronological order.",
      "parameters": {
        "type": "object",
        "properties": {
          "channel": {"type": "string"},
          "limit": {"type": "integer", "default": 100, "maximum": 1000},
          "oldest": {"type": "string", "description": "Start of time range (Unix timestamp)"},
          "latest": {"type": "string", "description": "End of time range (Unix timestamp)"},
          "inclusive": {"type": "boolean", "default": true}
        },
        "required": ["channel"]
      }
    },
    {
      "name": "update_message",
      "description": "Update an existing Slack message. Can change text or blocks.",
      "parameters": {
        "type": "object",
        "properties": {
          "channel": {"type": "string"},
          "ts": {"type": "string", "description": "Timestamp of the message to update"},
          "text": {"type": "string"},
          "blocks": {"type": "array", "items": {"type": "object"}}
        },
        "required": ["channel", "ts"]
      }
    },
    {
      "name": "create_channel",
      "description": "Create a new public or private Slack channel.",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {"type": "string", "description": "Channel name (lowercase, no spaces)"},
          "is_private": {"type": "boolean", "default": false},
          "team_id": {"type": "string", "description": "Team ID for Enterprise Grid workspaces"}
        },
        "required": ["name"]
      }
    }
  ],

  "weather": [
    {
      "name": "get_current_weather",
      "description": "Get current weather conditions for a location. Returns temperature, humidity, wind speed, UV index, and general conditions.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "description": "City name, postal code, or lat/lon (e.g. 'San Francisco, CA' or '37.77,-122.41')"
          },
          "units": {
            "type": "string",
            "enum": ["metric", "imperial", "standard"],
            "default": "metric",
            "description": "Temperature units: metric=Celsius, imperial=Fahrenheit, standard=Kelvin"
          },
          "language": {"type": "string", "default": "en", "description": "ISO language code for condition descriptions"}
        },
        "required": ["location"]
      }
    },
    {
      "name": "get_forecast",
      "description": "Get weather forecast for up to 14 days. Returns daily high/low temperatures, precipitation probability, and condition codes.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "days": {
            "type": "integer",
            "default": 7,
            "minimum": 1,
            "maximum": 14,
            "description": "Number of forecast days"
          },
          "units": {"type": "string", "enum": ["metric", "imperial"], "default": "metric"},
          "hourly": {"type": "boolean", "default": false, "description": "Include hourly breakdown"}
        },
        "required": ["location"]
      }
    },
    {
      "name": "get_historical",
      "description": "Get historical weather data for a location and date range. Returns daily averages going back up to 30 years.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "start_date": {"type": "string", "description": "ISO 8601 date (YYYY-MM-DD)"},
          "end_date": {"type": "string", "description": "ISO 8601 date (YYYY-MM-DD)"},
          "units": {"type": "string", "enum": ["metric", "imperial"], "default": "metric"}
        },
        "required": ["location", "start_date", "end_date"]
      }
    },
    {
      "name": "get_air_quality",
      "description": "Get current air quality index (AQI) and pollutant levels for a location.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "pollutants": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Specific pollutants to include: co, no, no2, o3, so2, pm2_5, pm10, nh3"
          }
        },
        "required": ["location"]
      }
    },
    {
      "name": "get_alerts",
      "description": "Get active weather alerts and warnings for a location (severe weather, hurricanes, etc.).",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "severity": {
            "type": "string",
            "enum": ["minor", "moderate", "severe", "extreme", "all"],
            "default": "all"
          }
        },
        "required": ["location"]
      }
    },
    {
      "name": "get_astronomy",
      "description": "Get sunrise, sunset, moonrise, moonset, and moon phase for a location and date.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "date": {"type": "string", "description": "ISO 8601 date (YYYY-MM-DD), defaults to today"}
        },
        "required": ["location"]
      }
    },
    {
      "name": "search_location",
      "description": "Search for a location by name and get its coordinates and timezone.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {"type": "string", "description": "Location name to search for"},
          "limit": {"type": "integer", "default": 5, "description": "Maximum number of results"}
        },
        "required": ["query"]
      }
    },
    {
      "name": "get_hourly_forecast",
      "description": "Get detailed hour-by-hour weather forecast for the next 48 hours.",
      "parameters": {
        "type": "object",
        "properties": {
          "location": {"type": "string"},
          "hours": {"type": "integer", "default": 24, "maximum": 48},
          "units": {"type": "string", "enum": ["metric", "imperial"], "default": "metric"}
        },
        "required": ["location"]
      }
    }
  ],

  "calendar": [
    {
      "name": "create_event",
      "description": "Create a calendar event with title, time, location, attendees, and recurrence rules.",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {"type": "string", "description": "Event title/summary"},
